# Application Configuration
APP_NAME="NextGen PHP Application"
APP_VERSION="1.0.0"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-domain.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nextgen_app
DB_USER=app_user
DB_PASS=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=nextgen_app:

# HashiCorp Vault Configuration
VAULT_URL=http://vault.internal:8200
VAULT_TOKEN=
VAULT_ROLE=nextgen-php-app
VAULT_AUTH_METHOD=aws
VAULT_SSL_VERIFY=true
VAULT_TIMEOUT=30

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=nextgen-app-assets
AWS_S3_REGION=us-east-1
AWS_CLOUDFRONT_DISTRIBUTION_ID=
AWS_CLOUDFRONT_DOMAIN=
AWS_SQS_QUEUE_URL=
AWS_SNS_TOPIC_ARN=

# CDN Configuration
CDN_ENABLED=true
CDN_BASE_URL=

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_RPM=60

# Logging Configuration
LOG_LEVEL=info
LOG_CHANNEL=app
LOG_PATH=/var/log/app.log
LOG_MAX_FILES=30

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=app:

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api
API_DOCS_ENABLED=true

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Background Jobs
QUEUE_DRIVER=redis
QUEUE_CONNECTION=default

# Monitoring
PROMETHEUS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Development Only (set to false in production)
XDEBUG_ENABLED=false
